{
    "name": "helium/email-notifications",
	"description": "Custom Laravel email notifications",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Spencer Merryman",
            "email": "spencer@heliumservices.com"
        },
        {
            "name": "Nick Rupert",
            "email": "nick@heliumservices.com"
        }
    ],
    "require": {
        "illuminate/support": ">=6",
        "phpmailer/phpmailer": "^6.1",
        "swiftmailer/swiftmailer": "^6.2",
        "helium/service-manager": "~2.0.0"
    },
	"autoload": {
		"psr-4": {
			"Helium\\EmailNotifications\\": "src/",
			"Helium\\EmailNotifications\\Tests\\": "tests/"
		}
	},
    "require-dev": {
        "orchestra/testbench": "^5.1"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Helium\\EmailNotifications\\Providers\\EmailServiceProvider"
            ]
        }
    }
}
